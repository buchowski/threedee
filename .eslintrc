{
	"extends": "airbnb",

	"envs": [
		"browser"
	],

	"globals": {
		"window": true,
		"document": true,
		"THREE": true,
		"THREEx": true,
		"requestAnimationFrame": true
	},

	"rules": {
		"no-param-reassign": ["error", { "props": false }],
		"new-cap": 0,
		"indent": ["error", 4],
		"padded-blocks": 0,
		"prefer-const": 0,
		"no-plusplus": 0,
		"semi": 0,
		"no-unused-vars": 0,
		"no-mixed-operators": 0
	}
}